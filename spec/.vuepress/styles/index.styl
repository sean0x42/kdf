// Fonts
@import url('https://rsms.me/inter/inter.css');
.theme-container { font-family: 'Inter', sans-serif; }
@supports (font-variation-settings: normal) {
  .theme-container {
    font-family: 'Inter var', sans-serif;
  }
}

// Sidebar
.sidebar ul.sidebar-sub-headers
  font-size: 1em
  padding-left: 0.75rem

  a.sidebar-link
    padding-top: 0.35rem
    padding-bottom: 0.35rem
    padding-left: 2rem
    border-left: 0.25rem solid transparent
  
  > a.sidebar-link
    color: #465869

  .sidebar-sub-headers a.sidebar-link
    color: #657686

// Danger block
.custom-block-title
  letter-spacing 1px
  font-size 90%

.custom-block.danger,
.custom-block.tip
  border-radius 3px
  border-left-width 6px


// Clean up headings
.theme-default-content:not(.custom) > h1:first-child
  margin 2rem 0 1rem

  & + p
    margin 1em 0

h1
  font-size 2em